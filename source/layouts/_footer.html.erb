                  <li>
                    <a href="http://astrails.com/"  data-event="ga" data-ga-category="Footer Menu" data-ga-action="click" data-ga-label="astrails" target="_blank">
                      <%= image_tag "astrails_small.png", alt: "Astrails" %></a>
                  </li>
                </ul>
            </div>
            <div class="col-sm-4 text-left">
              <ul>
                <li>
                  <span class="description">Share on</span>
